<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0-windows</TargetFramework>
		<EnableWindowsTargeting>true</EnableWindowsTargeting>
		<LangVersion>latest</LangVersion>
		<PlatformTarget>x64</PlatformTarget>
		<UseWpf>True</UseWpf>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
	</PropertyGroup>

	<PropertyGroup>
		<Authors>$(CompanyName)</Authors>
		<Company>$(CompanyName)</Company>
		<Copyright>$(CompanyName)</Copyright>
		<Description>Revit application and command base classes that support Inversion of Control (IoC).</Description>
		<!--<ImagePath>..</ImagePath>-->
		<IsPublishable>True</IsPublishable>
		<PackageIcon>Logo.png</PackageIcon>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageProjectUrl>https://www.scotec-software.com</PackageProjectUrl>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<!--<PackageReadmePath>..</PackageReadmePath>-->
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<RepositoryUrl>https://github.com/scotec-Software-Solutions-AB/scotec-revit</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<SignAssembly>False</SignAssembly>
		<Title>Scotec.Revit</Title>
	</PropertyGroup>

	<PropertyGroup>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IsPackable>true</IsPackable>
		<DebugType>embedded</DebugType>
		<DebugSymbols>true</DebugSymbols>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\Logo.png" Pack="true" PackagePath="" />
		<None Include="..\README.md" Pack="true" PackagePath="" />
		<Content Include="..\..\license.txt" Link="license.txt" Pack="true" PackagePath="license.txt" />
		<None Include="$(OutputPath)\Scotec.Revit.LoadContext.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Autofac" Version="8.0.0" />
		<PackageReference Include="Autofac.Extensions.DependencyInjection" Version="9.0.0" />
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
		<PackageReference Include="Nice3point.Revit.Api.RevitAPI" Version="2025.0.2" />
		<PackageReference Include="Nice3point.Revit.Api.RevitAPIUI" Version="2025.0.2" />
		<ProjectReference Include="..\Scotec.Revit.LoadContext\Scotec.Revit.LoadContext.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="true" PrivateAssets="All" />

	</ItemGroup>

	<PropertyGroup>
		<!--<NuspecFile>$(MSBuildProjectName).nuspec</NuspecFile>-->
		<PackageOutputPath>..\..\localPackages</PackageOutputPath>
	</PropertyGroup>

	<!--<Target Name="CustomBeforeGenerateNuspec" BeforeTargets="GenerateNuspec">
		<PropertyGroup>
			<NuspecProperties>Authors=$(Authors);Configuration=$(Configuration);Copyright=$(Copyright);Description=$(Description);License=$(PackageLicenseExpression);ImagePath=$(ImagePath);PackageIcon=$(PackageIcon);PackageReadmeFile=$(PackageReadmeFile);PackageReadmePath=$(PackageReadmePath);PackageVersion=$(PackageVersion);ProjectName=$(MSBuildProjectName);ProjectUrl=$(PackageProjectUrl);RepositoryType=$(RepositoryType);RepositoryUrl=$(RepositoryUrl);RequireLicenseAcceptance=$(PackageRequireLicenseAcceptance);</NuspecProperties>
		</PropertyGroup>
	</Target>-->

</Project>